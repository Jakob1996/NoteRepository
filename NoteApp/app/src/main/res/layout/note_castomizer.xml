<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noteCastomizerLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_miscallaneous"
    android:orientation="vertical"
    app:behavior_peekHeight="@dimen/bottom_sheet_behavior"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/noteCastomizerTitleTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/ubuntumedium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/castomizer"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/noteCastomizerPanelLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntumedium"
            android:includeFontPadding="false"
            android:text="@string/options"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/noteCastomizerFontColorFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_color_text_24"
                app:tint="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/noteCastomizerFontSizeFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_size_text"
                app:tint="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/noteCastomizerSearchFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/noteCastomizerLockFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp" />

            <ImageView
                android:id="@+id/noteCastomizerLockIv"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_baseline_lock"
                app:tint="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/noteCastomizerFavouriteFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_gravity="center" />

            <CheckBox
                android:id="@+id/noteCastomizerFavouriteCb"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:button="@null"
                android:contentDescription="@string/app_name"
                android:drawableRight="@drawable/checkbox_favourite_selector"
                android:padding="11dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/noteCastomizerInfoFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="47dp"
                android:layout_height="47dp" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_outline_info"
                app:tint="@color/white" />

        </FrameLayout>

    </LinearLayout>

