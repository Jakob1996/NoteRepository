<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/sortDialogTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:text="@string/sort_date"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/fragmentDialogRg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortDialogTitleTv">

        <RadioButton
            android:id="@+id/fragmentDialogDescRg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:buttonTint="@color/gold"
            android:fontFamily="@font/ubunturegular"
            android:paddingStart="6dp"
            android:text="@string/descending"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/fragmentDialogAscRg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:buttonTint="@color/gold"
            android:fontFamily="@font/ubunturegular"
            android:paddingStart="6dp"
            android:text="@string/ascending"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/sortDialogConfirmTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:text="@string/confirm"
        android:textColor="@color/gold"
        android:textSize="22sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentDialogRg" />
</androidx.constraintlayout.widget.ConstraintLayout>