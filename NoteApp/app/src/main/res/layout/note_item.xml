<?xml version="1.0" encoding="utf-8"?>

<com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="7dp"
    app:corner_radius="16dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageNote"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/robotoligth"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="9dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/robotoligth"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/delLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorDelet"
        android:visibility="gone"
        android:gravity="center">

      <ImageView
          android:layout_width="26dp"
          android:layout_height="26dp"
          android:src="@drawable/ic_baseline_delete"
          app:tint="@color/black"
          android:layout_margin="8dp"/>
    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


