<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/infoNoteDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorQuickActionsBackground"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/colorQuickActionsBackground"
        >

        <TextView
            android:id="@+id/textLenghtText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Text lenght: "
            android:textColorHint="@color/colorIcons"
            android:textColor="@color/white"
            android:fontFamily="@font/ubunturegular"
            android:backgroundTint="@color/colorNoteColor2"
            />
        <TextView
            android:id="@+id/textLenghtValue"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColorHint="@color/colorIcons"
            android:textColor="@color/white"
            android:fontFamily="@font/ubunturegular"
            android:backgroundTint="@color/colorNoteColor2"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
</LinearLayout>
