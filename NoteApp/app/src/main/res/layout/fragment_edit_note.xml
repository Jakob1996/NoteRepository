<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Primary"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragmentSearchCategoryToolbarRl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/color_Primary"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/fragmentEditNoteToolbarBackIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                app:tint="@color/colorIcons" />

            <TextView
                android:id="@+id/fragmentEditNoteToolbarTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/robotoligth"
                android:text="@string/note_editor"
                android:textColor="@color/colorIcons"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/fragmentEditNoteToolbarSaveIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_done_circle"
                app:tint="@color/colorIcons" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragmentEditNoteTitleLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentSearchCategoryToolbarRl">

            <EditText
                android:id="@+id/fragmentEditNoteTitleEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_Primary"
                android:fontFamily="@font/robotoligth"
                android:gravity="center_vertical"
                android:hint="@string/note_title"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/colorTextHint"
                android:textSize="26sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@color/color_Primary"
            android:fadeScrollbars="true"
            android:paddingRight="10dp"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentEditNoteTitleLl">

            <EditText
                android:id="@+id/fragmentEditNoteDescriptionEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_Primary"
                android:fontFamily="@font/robotoligth"
                android:hint="@string/type_note_here"
                android:textColor="@color/white"
                android:textColorHint="@color/colorTextHint"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragmentGeneralNoteTitleLl" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


