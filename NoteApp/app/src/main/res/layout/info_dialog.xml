<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchNoteDialogLl"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorQuickActionsBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorQuickActionsBackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infoDialogTextTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorNoteColor2"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="@string/text_lenght"
            android:textColor="@color/white"
            android:textColorHint="@color/colorIcons" />

        <TextView
            android:id="@+id/infoDialogLenghtTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorNoteColor2"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/colorIcons" />

    </LinearLayout>
</LinearLayout>
