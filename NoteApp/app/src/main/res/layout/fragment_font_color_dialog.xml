<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fontColorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorQuickActionsBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/colorQuickActionsBackground">

        <FrameLayout
            android:id="@+id/fontColor1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="45dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                app:tint="@color/colorFont1"
                android:src="@drawable/ic_round_color_text_24" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fontColor2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="45dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_color_text_24"
                app:tint="@color/colorFont2" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fontColor3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorFont3"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_color_text_24"
                app:tint="@color/colorFont3" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fontColor4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="45dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_color_text_24"
                app:tint="@color/colorFont4" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fontColor5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="45dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="11dp"
                android:src="@drawable/ic_round_color_text_24"
                app:tint="@color/colorFont5" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary_dark"
        >
        <Button
            android:id="@+id/save_button_fontColorFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:textColor="@color/colorNoteColor2"
            android:background="@color/colorPrimary_dark"
            android:fontFamily="@font/ubunturegular" />
    </LinearLayout>


</LinearLayout>